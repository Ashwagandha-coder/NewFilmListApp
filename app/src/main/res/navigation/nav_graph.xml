<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sortByDate">

    <fragment
        android:id="@+id/sortByDate"
        android:name="com.example.newfilmlistapp.SortByDate"
        android:label="fragment_sort_by_date"
        tools:layout="@layout/fragment_sort_by_date" >
        <action
            android:id="@+id/action_sortByDate_to_popular"
            app:destination="@id/popular" />
        <action
            android:id="@+id/action_sortByDate_to_favorites"
            app:destination="@id/favorites" />
    </fragment>
    <fragment
        android:id="@+id/favorites"
        android:name="com.example.newfilmlistapp.Favorites"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favorites_to_popular"
            app:destination="@id/popular" />
        <action
            android:id="@+id/action_favorites_to_sortByDate"
            app:destination="@id/sortByDate" />
    </fragment>
    <fragment
        android:id="@+id/popular"
        android:name="com.example.newfilmlistapp.Popular"
        android:label="fragment_popular"
        tools:layout="@layout/fragment_popular" >
        <action
            android:id="@+id/action_popular_to_favorites"
            app:destination="@id/favorites" />
        <action
            android:id="@+id/action_popular_to_sortByDate"
            app:destination="@id/sortByDate" />
    </fragment>
</navigation>